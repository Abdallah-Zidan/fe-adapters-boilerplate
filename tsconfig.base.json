{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/core": ["libs/core/src/index.ts"],
      "@libs/mongo-event-store": ["libs/mongo-event-store/src/index.ts"],
      "@libs/redis-session": ["libs/redis-session/src/index.ts"],
      "@libs/socket.io-adapter": ["libs/socket.io-adapter/src/index.ts"],
      "@libs/vault": ["libs/vault/src/index.ts"],
      "@libs/ws-adapter": ["libs/ws-adapter/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
